# IEClub 环境变量配置示例文件
# 复制此文件为 .env 并填入实际配置值

# ==================== 应用配置 ====================

# 应用端口
PORT=3000

# Node.js 环境
NODE_ENV=development

# ==================== 数据库配置 ====================

# MySQL 数据库连接字符串
# 格式: mysql://用户名:密码@主机:端口/数据库名
DATABASE_URL=mysql://ieclub_user:your_password@localhost:3306/ieclub

# ==================== Redis 配置 ====================

# Redis 连接字符串
REDIS_URL=redis://localhost:6379/0

# ==================== JWT 配置 ====================

# JWT 密钥（生产环境请使用强随机字符串）
JWT_SECRET=your-super-secret-jwt-key-here

# JWT 令牌过期时间（秒）
JWT_EXPIRES_IN=604800

# ==================== 微信小程序配置 ====================

# 微信小程序 AppID
WECHAT_APPID=your_wechat_appid

# 微信小程序 AppSecret
WECHAT_SECRET=your_wechat_secret

# ==================== 阿里云 OSS 配置 ====================

# OSS AccessKey ID
OSS_ACCESS_KEY_ID=your_oss_access_key_id

# OSS AccessKey Secret
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret

# OSS 存储桶名称
OSS_BUCKET=your-bucket-name

# OSS 地域
OSS_REGION=oss-cn-hangzhou

# ==================== 文件上传配置 ====================

# 最大文件大小（字节）
MAX_FILE_SIZE=10485760

# 允许的文件类型
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ==================== 日志配置 ====================

# 日志级别（error, warn, info, debug）
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH=./logs/ieclub.log

# ==================== 邮件配置（可选） ====================

# SMTP 服务器
SMTP_HOST=smtp.example.com

# SMTP 端口
SMTP_PORT=587

# SMTP 用户名
SMTP_USER=your_email@example.com

# SMTP 密码
SMTP_PASS=your_email_password

# ==================== 推送服务配置 ====================

# 极光推送 AppKey（可选）
JPUSH_APP_KEY=your_jpush_app_key

# 极光推送 Master Secret（可选）
JPUSH_MASTER_SECRET=your_jpush_master_secret

# ==================== 监控和分析 ====================

# Sentry DSN（可选，用于错误监控）
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==================== API 限流配置 ====================

# API 请求限制（每分钟请求数）
API_RATE_LIMIT=1000

# 文件上传限制（每分钟请求数）
UPLOAD_RATE_LIMIT=100

# ==================== 缓存配置 ====================

# 用户数据缓存时间（秒）
USER_CACHE_TTL=3600

# 话题数据缓存时间（秒）
TOPIC_CACHE_TTL=1800

# ==================== 算法参数 ====================

# 话题热度衰减因子
HOT_DECAY_FACTOR=0.8

# 推荐算法权重
RECOMMENDATION_WEIGHTS={\"view\":0.1,\"like\":0.3,\"comment\":0.4,\"bookmark\":0.2}

# ==================== 安全配置 ====================

# CORS 允许的域名
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# 会话密钥
SESSION_SECRET=your-session-secret-key

# ==================== 开发环境特殊配置 ====================

# 启用调试模式
DEBUG=true

# 热重载配置
HOT_RELOAD=true

# ==================== 生产环境特殊配置 ====================

# 数据库连接池大小
DB_POOL_SIZE=20

# Redis 连接池大小
REDIS_POOL_SIZE=10

# ==================== 第三方服务集成 ====================

# 微信支付商户号（可选）
WECHAT_PAY_MCH_ID=your_merchant_id

# 微信支付 API 密钥（可选）
WECHAT_PAY_API_KEY=your_pay_api_key

# 阿里云短信服务配置（可选）
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=your_sms_sign_name
SMS_TEMPLATE_CODE=your_sms_template_code

# ==================== 部署配置 ====================

# 部署环境标识
DEPLOY_ENV=development

# 健康检查端点路径
HEALTH_CHECK_PATH=/health

# 监控指标收集间隔（秒）
METRICS_INTERVAL=60