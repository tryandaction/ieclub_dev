<!--pages/community/index.wxml-->
<view class="community-page">
  <view class="header">
    <text class="title">发现伙伴</text>
  </view>

  <scroll-view scroll-y class="content">
    <view class="user-grid">
      <view wx:for="{{users}}" wx:key="id" class="user-card" data-index="{{index}}">
        <text class="avatar">{{item.avatar}}</text>
        <text class="name">{{item.name}}</text>
        <text class="major">{{item.major}}</text>
        <view class="level">LV{{item.level}}</view>
        <button 
          class="follow-btn {{item.isFollowing ? 'following' : ''}}" 
          bindtap="toggleFollow" 
          data-index="{{index}}"
        >
          {{item.isFollowing ? '已关注' : '+ 关注'}}
        </button>
      </view>
    </view>
  </scroll-view>
</view>

