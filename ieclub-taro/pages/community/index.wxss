/* pages/community/index.wxss */
.community-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.content {
  height: calc(100vh - 200rpx);
  padding: 30rpx 20rpx;
}

.user-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.user-card {
  width: 48%;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.avatar {
  font-size: 80rpx;
  display: block;
  margin-bottom: 15rpx;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.major {
  font-size: 22rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.level {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f3e8ff;
  color: #8b5cf6;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.follow-btn {
  width: 100%;
  padding: 18rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.follow-btn.following {
  background: #f5f5f5;
  color: #666;
}

