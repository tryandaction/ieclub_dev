/* pages/profile/index.wxss */
.profile-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.user-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 30rpx;
  color: #fff;
  text-align: center;
}

.avatar {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.school {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 20rpx;
}

.badges {
  display: flex;
  gap: 15rpx;
  justify-content: center;
}

.badge {
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.stats {
  display: flex;
  background: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #8b5cf6;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.menu {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-label {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 40rpx;
  color: #ccc;
}

