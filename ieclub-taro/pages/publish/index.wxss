/* pages/publish/index.wxss */
.publish-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.type-selector {
  display: flex;
  gap: 15rpx;
  padding: 30rpx 20rpx;
}

.type-item {
  flex: 1;
  padding: 30rpx 20rpx;
  background: #fff;
  border-radius: 16rpx;
  text-align: center;
}

.type-item.active.offer {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.type-item.active.demand {
  background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
}

.type-item.active.project {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.type-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 10rpx;
}

.type-label {
  font-size: 26rpx;
  color: #666;
}

.type-item.active .type-label {
  color: #fff;
  font-weight: bold;
}

.form {
  padding: 0 20rpx;
}

.form-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.form-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.publish-btn {
  width: 100%;
  padding: 24rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

