/* pages/feedback/index.wxss */

/* ========== 页面容器 ========== */
.feedback-page {
  min-height: 100vh;
  background: #f3f4f6;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* ========== Tab切换 ========== */
.tabs-header {
  background: #ffffff;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  position: relative;
  transition: all 0.3s;
}

.tab-text {
  font-size: 30rpx;
  color: #6b7280;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #3b82f6;
  font-weight: 700;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 25%;
  right: 25%;
  height: 6rpx;
  background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 100%);
  border-radius: 3rpx;
}

/* ========== 提交反馈Tab ========== */
.submit-tab {
  padding: 24rpx;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.required {
  color: #ef4444;
  font-size: 32rpx;
}

.title-tip {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 400;
  margin-left: 8rpx;
}

/* 反馈类型 */
.types-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.type-card {
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s;
}

.type-card.active {
  border-color: #3b82f6;
  background: #eff6ff;
}

.type-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 12rpx;
}

.type-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.type-desc {
  font-size: 22rpx;
  color: #6b7280;
  display: block;
}

/* 输入框 */
.input-field {
  width: 100%;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
}

.textarea-field {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 12rpx;
}

/* 图片上传 */
.images-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background: #ef4444;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.delete-icon {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1;
}

.add-image-btn {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.add-image-btn:active {
  border-color: #3b82f6;
  background: #eff6ff;
}

.add-icon {
  font-size: 48rpx;
  color: #9ca3af;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 提交区域 */
.submit-section {
  padding: 0 24rpx 24rpx;
}

.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  margin-bottom: 24rpx;
}

.submit-btn.submitting {
  opacity: 0.6;
}

.submit-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #fef3c7;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #92400e;
}

.tip-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* ========== 我的反馈Tab ========== */
.my-feedback-tab {
  padding: 24rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  gap: 16rpx;
}

.loading-icon {
  font-size: 64rpx;
  animation: rotate 1.5s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 反馈列表 */
.feedback-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feedback-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  transition: all 0.3s;
}

.feedback-card-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.feedback-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.feedback-type {
  font-size: 40rpx;
}

.feedback-status {
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-warning {
  background: #fef3c7;
  color: #92400e;
}

.status-primary {
  background: #dbeafe;
  color: #1e40af;
}

.status-success {
  background: #d1fae5;
  color: #065f46;
}

.status-info {
  background: #e5e7eb;
  color: #374151;
}

.feedback-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.feedback-content {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.feedback-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 12rpx;
  border-top: 1rpx solid #f3f4f6;
}

.feedback-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.delete-feedback-btn {
  padding: 8rpx 20rpx;
  background: #fee2e2;
  color: #dc2626;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 160rpx;
  line-height: 1;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
  display: block;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}
