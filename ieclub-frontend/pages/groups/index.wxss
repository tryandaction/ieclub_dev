.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-content {
  color: #fff;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}

.create-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 28rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 40rpx;
  color: #fff;
  font-size: 28rpx;
}

/* Tab切换 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
}

.tab.active {
  background: #667eea;
  color: #fff;
}

/* 搜索框 */
.search-box {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-btn {
  padding: 0 36rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #667eea;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
}

/* 分类筛选 */
.categories {
  white-space: nowrap;
  padding: 20rpx 30rpx;
  background: #fff;
}

.category-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.category-item.active {
  background: #667eea;
  color: #fff;
}

/* 热门小组 */
.hot-section {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.hot-list {
  white-space: nowrap;
}

.hot-item {
  display: inline-block;
  width: 160rpx;
  text-align: center;
  margin-right: 24rpx;
}

.hot-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
  margin: 0 auto 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  overflow: hidden;
}

.hot-avatar image {
  width: 100%;
  height: 100%;
}

.hot-name {
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 小组列表 */
.group-list {
  padding: 20rpx 30rpx;
}

.group-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.group-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  flex-shrink: 0;
}

.group-avatar image {
  width: 100%;
  height: 100%;
}

.avatar-icon {
  font-size: 44rpx;
}

.group-info {
  flex: 1;
  min-width: 0;
}

.group-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group-stats {
  display: flex;
  gap: 24rpx;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #999;
}

.joined-tag {
  padding: 10rpx 24rpx;
  background: #e8f5e9;
  color: #4caf50;
  border-radius: 30rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

.join-btn {
  padding: 10rpx 28rpx;
  border: 2rpx solid #667eea;
  color: #667eea;
  border-radius: 30rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

/* 我的小组 */
.my-groups {
  padding: 30rpx;
}

.my-group-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.my-group-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.my-group-cover {
  height: 140rpx;
  position: relative;
}

.my-group-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.role-tag {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #fff;
}

.role-tag.owner {
  background: #f59e0b;
}

.role-tag.admin {
  background: #3b82f6;
}

.role-tag.member {
  background: #6b7280;
}

.my-group-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: #fff;
  margin: -40rpx auto 0;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  overflow: hidden;
}

.my-group-avatar image {
  width: 100%;
  height: 100%;
}

.my-group-info {
  padding: 16rpx 20rpx 24rpx;
  text-align: center;
}

.my-group-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.my-group-stats {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999;
}

/* 加载和空状态 */
.loading {
  padding: 30rpx;
}

.loading-item {
  height: 160rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.loading-more, .no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.empty-btn {
  display: inline-block;
  margin-top: 30rpx;
  padding: 16rpx 48rpx;
  background: #667eea;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}
