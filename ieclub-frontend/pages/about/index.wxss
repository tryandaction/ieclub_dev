/* pages/about/index.wxss */

/* ========== 页面容器 ========== */
.about-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0fdf4 0%, #f3f4f6 100%);
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
}

/* ========== Hero区域 ========== */
.hero-section {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  margin-bottom: 32rpx;
}

.logo-container {
  margin-bottom: 24rpx;
}

.logo {
  font-size: 120rpx;
  line-height: 1;
  display: inline-block;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.app-name {
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.app-version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* ========== 区块 ========== */
.section {
  margin-bottom: 32rpx;
  padding: 0 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 40rpx;
  line-height: 1;
}

.title-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

/* ========== 简介卡片 ========== */
.description-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.description-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.8;
}

/* ========== 功能网格 ========== */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s;
}

.feature-card:active {
  transform: scale(0.95);
}

.feature-icon {
  font-size: 64rpx;
  line-height: 1;
  margin-bottom: 16rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
  display: block;
}

.feature-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  display: block;
}

/* ========== 数据统计 ========== */
.stats-grid {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* ========== 团队列表 ========== */
.team-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.team-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.team-role {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.team-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.team-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* ========== 联系方式 ========== */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.contact-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s;
}

.contact-item:active {
  transform: scale(0.98);
  background: #f9fafb;
}

.contact-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.contact-icon {
  font-size: 40rpx;
  line-height: 1;
  flex-shrink: 0;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 0;
}

.contact-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.contact-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.contact-action {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

/* ========== 页脚 ========== */
.footer {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
}

.copyright {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 12rpx;
}

.made-with {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}
