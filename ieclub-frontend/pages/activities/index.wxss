/* pages/activities/index.wxss */

/* ========== 基础布局 ========== */
.activities-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f9fafb 0%, #f3f4f6 100%);
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* ========== 顶部标题卡片 ========== */
.header-card {
  margin: 24rpx 24rpx 20rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.header-icon {
  font-size: 80rpx;
  line-height: 1;
}

/* ========== 标签栏 ========== */
.tabs-wrapper {
  padding: 0 24rpx 20rpx;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs {
  display: inline-flex;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
}

.tab-item.active {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.tab-label {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 500;
  transition: all 0.3s;
}

.tab-item.active .tab-label {
  color: #ffffff;
  font-weight: 700;
}

.tab-item-hover {
  background: #f3f4f6;
}

/* ========== 滚动区域 ========== */
.content-scroll {
  height: calc(100vh - 340rpx);
}

/* ========== 骨架屏 ========== */
.skeleton-container {
  padding: 0 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.skeleton-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.skeleton-cover {
  height: 280rpx;
  background: #e5e7eb;
}

.skeleton-content {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.skeleton-title {
  height: 40rpx;
  width: 80%;
  background: #e5e7eb;
  border-radius: 8rpx;
}

.skeleton-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skeleton-meta-item {
  height: 28rpx;
  width: 60%;
  background: #e5e7eb;
  border-radius: 8rpx;
}

.skeleton-btn {
  height: 72rpx;
  background: #e5e7eb;
  border-radius: 16rpx;
  margin-top: 12rpx;
}

.skeleton-shimmer {
  animation: shimmer 1.5s infinite;
  background: linear-gradient(90deg, #e5e7eb 0%, #f3f4f6 50%, #e5e7eb 100%);
  background-size: 200% 100%;
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ========== 活动列表 ========== */
.activity-list {
  padding: 0 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* ========== 活动卡片 ========== */
.activity-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.activity-card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 封面区域 */
.activity-cover {
  position: relative;
  height: 280rpx;
  background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-emoji {
  font-size: 120rpx;
  line-height: 1;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.status-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.status-upcoming {
  background: rgba(251, 146, 60, 0.95);
}

.status-ongoing {
  background: rgba(34, 197, 94, 0.95);
}

.status-ended {
  background: rgba(156, 163, 175, 0.95);
}

.status-text {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 600;
  line-height: 1;
}

/* 内容区域 */
.activity-content {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.4;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.meta-icon {
  font-size: 28rpx;
  line-height: 1;
}

.meta-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
  flex: 1;
}

/* 参与进度 */
.participants-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  border-radius: 16rpx;
}

.participants-bar {
  height: 12rpx;
  background: rgba(59, 130, 246, 0.2);
  border-radius: 6rpx;
  overflow: hidden;
}

.participants-fill {
  height: 100%;
  background: linear-gradient(90deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.participants-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.participants-count {
  font-size: 24rpx;
  color: #3b82f6;
  font-weight: 600;
}

.participants-percent {
  font-size: 24rpx;
  color: #3b82f6;
  font-weight: 700;
}

/* 报名按钮 */
.register-btn {
  width: 100%;
  padding: 24rpx 0;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1;
}

.register-btn.registered {
  background: #f3f4f6;
  color: #6b7280;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.register-btn-hover {
  transform: scale(0.97);
}

.btn-text {
  line-height: 1;
}

/* ========== 加载状态 ========== */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-more-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.no-more {
  padding: 40rpx;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #d1d5db;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  gap: 24rpx;
}

.empty-emoji {
  font-size: 120rpx;
  line-height: 1;
  opacity: 0.8;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
}
