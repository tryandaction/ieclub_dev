/* pages/activity-detail/activity-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
}

.activity-detail {
  background: white;
}

/* 封面 */
.cover {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-icon {
  font-size: 120rpx;
}

/* 内容区域 */
.content {
  padding: 40rpx 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.info-icon {
  font-size: 40rpx;
  line-height: 1;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 章节 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* 组织者 */
.organizer {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.organizer-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.organizer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.organizer-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.organizer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.organizer-bio {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-secondary {
  background: #f0f0f0;
  color: #666;
}

.btn-success {
  background: #52c41a;
  color: white;
}

.btn-info {
  background: #8b5cf6;
  color: white;
}

.checked-in-badge {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  background: #f6ffed;
  color: #52c41a;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

