/* pages/my-favorites/index.wxss */

/* ========== 页面容器 ========== */
.my-favorites-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef3f3 0%, #f3f4f6 100%);
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* ========== 页面头部 ========== */
.page-header {
  background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
  padding: 32rpx 24rpx 40rpx;
  margin-bottom: 24rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.header-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.title-icon {
  font-size: 48rpx;
  line-height: 1;
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.1));
}

.title-text {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
}

.header-subtitle {
  padding-left: 64rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ========== 收藏容器 ========== */
.favorites-container {
  padding: 0 24rpx;
}

/* ========== 话题卡片 ========== */
.topic-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.topic-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  position: relative;
}

.topic-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.topic-card:active::before {
  opacity: 1;
}

/* 内容区域 */
.topic-content-area {
  padding: 28rpx;
}

.topic-content-hover {
  background: #fafafa;
}

/* 话题头部 */
.topic-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.topic-category {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(245, 158, 11, 0.1);
  border-radius: 12rpx;
}

.category-icon {
  font-size: 28rpx;
  line-height: 1;
}

.category-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #f59e0b;
}

.bookmark-time {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 话题标题 */
.topic-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 话题内容 */
.topic-content {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 话题标签 */
.topic-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag-item {
  padding: 6rpx 16rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

/* 话题统计 */
.topic-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stat-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.stat-icon {
  font-size: 28rpx;
  line-height: 1;
}

.stat-count {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 600;
}

/* 操作按钮区域 */
.topic-actions {
  padding: 20rpx 28rpx;
  border-top: 1rpx solid #f3f4f6;
  display: flex;
  justify-content: flex-end;
}

.unbookmark-btn {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  color: #dc2626;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.unbookmark-btn-hover {
  background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
  transform: scale(0.95);
}

.btn-icon {
  font-size: 28rpx;
  line-height: 1;
}

/* ========== 骨架屏 ========== */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.skeleton-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
}

.skeleton-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.skeleton-title {
  width: 160rpx;
  height: 48rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 12rpx;
}

.skeleton-time {
  width: 100rpx;
  height: 36rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

.skeleton-content {
  width: 100%;
  height: 120rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.skeleton-footer {
  display: flex;
  gap: 12rpx;
}

.skeleton-tag {
  width: 120rpx;
  height: 44rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 10rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 160rpx;
  line-height: 1;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
  display: block;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.3);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* ========== 加载更多 ========== */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.loading-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.loading-icon {
  font-size: 32rpx;
  animation: rotate 1.5s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.no-more-text {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e5e7eb;
}

.no-more-label {
  white-space: nowrap;
}
