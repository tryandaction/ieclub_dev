/* pages/my-stats/index.wxss */

.my-stats-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #8b5cf6 0%, #7c3aed 20%, #f3f4f6 20%);
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  gap: 16rpx;
}

.loading-icon {
  font-size: 64rpx;
  animation: rotate 1.5s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #ffffff;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 内容滚动区 */
.content-scroll {
  height: 100vh;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 用户信息头部 */
.header-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 48rpx 24rpx 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 64rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
}

.level-badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  align-self: flex-start;
}

.level-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 通用区块 */
.section {
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 36rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

/* 成长数据卡片 */
.growth-card {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.growth-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.growth-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.label-icon {
  font-size: 28rpx;
}

.label-text {
  font-size: 28rpx;
  color: #6b7280;
}

.growth-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #8b5cf6;
}

.growth-value.credits {
  color: #f59e0b;
}

/* 进度条 */
.progress-container {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-bar {
  height: 16rpx;
  background: #f3f4f6;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #8b5cf6 0%, #7c3aed 100%);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #9ca3af;
  text-align: right;
}

/* 数据概览网格 */
.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.overview-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border-left: 4rpx solid;
}

.card-icon {
  font-size: 48rpx;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.card-value {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1.2;
}

.card-label {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 发布类型列表 */
.types-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.type-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.type-icon {
  font-size: 32rpx;
}

.type-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
}

.type-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-left: 44rpx;
}

.type-count {
  font-size: 24rpx;
  color: #6b7280;
}

.type-percentage {
  font-size: 24rpx;
  font-weight: 700;
  color: #8b5cf6;
}

.type-bar {
  height: 8rpx;
  background: #f3f4f6;
  border-radius: 4rpx;
  overflow: hidden;
  margin-left: 44rpx;
}

.type-bar-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

/* 活跃度卡片 */
.activity-card {
  display: flex;
  align-items: center;
}

.activity-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.activity-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.activity-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.activity-value.highlight {
  font-size: 36rpx;
  font-weight: 700;
  color: #f59e0b;
}

.activity-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e5e7eb;
}

/* 成就网格 */
.achievements-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.achievement-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 16rpx;
  text-align: center;
}

.achievement-card.locked {
  background: #f3f4f6;
  opacity: 0.6;
}

.achievement-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.achievement-name {
  font-size: 24rpx;
  font-weight: 700;
  color: #78350f;
  margin-bottom: 4rpx;
}

.achievement-card.locked .achievement-name {
  color: #6b7280;
}

.achievement-desc {
  font-size: 20rpx;
  color: #92400e;
  line-height: 1.4;
}

.achievement-card.locked .achievement-desc {
  color: #9ca3af;
}

/* 提示信息 */
.tips-section {
  margin: 0 24rpx 40rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tips-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 24rpx;
  color: #1e40af;
  line-height: 1.6;
}
