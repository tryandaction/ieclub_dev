/* pages/plaza/index.wxss */
.plaza-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* Tab 切换栏 */
.tab-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-icon {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.tab-label {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.tab-item.active .tab-label {
  color: #fff;
  font-weight: bold;
}

/* 话题列表 */
.topic-list {
  height: calc(100vh - 120rpx);
  padding: 20rpx 15rpx;
}

.topic-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 话题卡片 */
.topic-card {
  width: 48%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.topic-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

/* 封面区域 */
.topic-cover {
  position: relative;
  height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.topic-offer {
  background: linear-gradient(135deg, #60a5fa 0%, #2563eb 100%);
}

.topic-demand {
  background: linear-gradient(135deg, #f472b6 0%, #ec4899 100%);
}

.topic-project {
  background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);
}

.topic-emoji {
  font-size: 120rpx;
}

.topic-type-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 12rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
}

.badge-icon {
  font-size: 18rpx;
}

.badge-label {
  font-size: 20rpx;
  color: #333;
  font-weight: 500;
}

/* 内容区域 */
.topic-content {
  padding: 20rpx;
}

.topic-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.topic-author {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.author-emoji {
  font-size: 32rpx;
}

.author-name {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.author-level {
  padding: 4rpx 12rpx;
  background: #f3e8ff;
  border-radius: 12rpx;
}

.level-text {
  font-size: 20rpx;
  color: #8b5cf6;
  font-weight: bold;
}

.topic-stats {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.stat-icon {
  font-size: 20rpx;
}

.stat-text {
  font-size: 22rpx;
  color: #999;
}

.want-count {
  margin-top: 15rpx;
  padding: 12rpx;
  background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%);
  border-radius: 12rpx;
  text-align: center;
}

.want-text {
  font-size: 24rpx;
  color: #ec4899;
  font-weight: bold;
}

