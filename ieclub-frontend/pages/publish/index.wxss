/* pages/publish/index.wxss */
.publish-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部标题 */
.header {
  padding: 40rpx;
  color: #fff;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.header-icon {
  font-size: 60rpx;
}

.header-text {
  flex: 1;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 类型选择器 */
.type-selector {
  display: flex;
  gap: 12rpx;
  padding: 24rpx 20rpx;
  background: #fff;
  overflow-x: auto;
}

.type-item {
  flex: 1;
  min-width: 140rpx;
  padding: 20rpx 16rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s;
}

.type-item.active {
  transform: scale(1.05);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.type-icon {
  font-size: 40rpx;
  display: block;
  margin-bottom: 8rpx;
}

.type-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.type-item.active .type-label {
  color: #fff;
  font-weight: 600;
}

/* 表单区域 */
.form {
  padding: 0 20rpx;
}

.form-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  display: block;
  margin-bottom: 12rpx;
}

.required {
  color: #ef4444;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #8b5cf6;
}

.form-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

.form-count {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  font-size: 22rpx;
  color: #9ca3af;
}

/* Picker样式 */
.picker-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #374151;
}

.picker-arrow {
  font-size: 32rpx;
  color: #9ca3af;
}

/* 成团阈值 */
.threshold-item .threshold-input-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.threshold-input {
  width: 120rpx;
  padding: 16rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  color: #8b5cf6;
}

.threshold-hint {
  font-size: 26rpx;
  color: #6b7280;
}

/* 标签输入 */
.tag-input-group {
  display: flex;
  gap: 12rpx;
}

.tag-input {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.tag-add-btn {
  padding: 0 32rpx;
  height: auto;
  background: #8b5cf6;
  color: #fff;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1;
  display: flex;
  align-items: center;
}

.tag-add-btn::after {
  display: none;
}

/* 标签列表 */
.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f3e8ff;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #8b5cf6;
}

.tag-item.skill {
  background: #dcfce7;
  color: #16a34a;
}

.tag-remove {
  font-size: 28rpx;
  color: inherit;
  opacity: 0.7;
}

/* 预设标签 */
.preset-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.preset-tag {
  padding: 12rpx 20rpx;
  background: #f3f4f6;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #6b7280;
  transition: all 0.2s;
}

.preset-tag.selected {
  background: #8b5cf6;
  color: #fff;
}

/* 已选标签 */
.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.selected-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 16rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.selected-tag .tag-remove {
  color: #fff;
}

/* 图片上传 */
.image-upload-area {
  margin-top: 12rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.image-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.image-add {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: #f9fafb;
}

.add-icon {
  font-size: 48rpx;
  color: #9ca3af;
}

.add-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 20rpx;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.draft-btn {
  flex: 1;
  padding: 24rpx 0;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.draft-btn::after {
  display: none;
}

.publish-btn {
  flex: 2;
  padding: 24rpx 0;
  background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.publish-btn::after {
  display: none;
}

.publish-btn[disabled] {
  background: #d1d5db;
  color: #9ca3af;
}

