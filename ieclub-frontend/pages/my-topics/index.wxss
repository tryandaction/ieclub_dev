/* pages/my-topics/index.wxss */

/* ========== 页面容器 ========== */
.my-topics-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f3f4f6 100%);
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* ========== 页面头部 ========== */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx 24rpx 40rpx;
  margin-bottom: 24rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.header-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.title-icon {
  font-size: 48rpx;
  line-height: 1;
}

.title-text {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
}

.header-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* ========== 话题容器 ========== */
.topics-container {
  padding: 0 24rpx;
}

/* ========== 话题卡片 ========== */
.topic-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.topic-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.topic-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.topic-card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.topic-card-hover::before {
  opacity: 1;
}

/* 话题头部 */
.topic-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.topic-category {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
}

.category-icon {
  font-size: 28rpx;
  line-height: 1;
}

.category-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #667eea;
}

.topic-time {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 话题标题 */
.topic-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 话题内容 */
.topic-content {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 话题标签 */
.topic-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag-item {
  padding: 6rpx 16rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

/* 话题底部 */
.topic-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.footer-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stat-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.stat-icon {
  font-size: 28rpx;
  line-height: 1;
}

.stat-count {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 600;
}

.topic-status {
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.topic-status.published {
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.topic-status.draft {
  background: rgba(245, 158, 11, 0.1);
  color: #f59e0b;
}

/* ========== 骨架屏 ========== */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.skeleton-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
}

.skeleton-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.skeleton-title {
  width: 160rpx;
  height: 48rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 12rpx;
}

.skeleton-time {
  width: 100rpx;
  height: 36rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

.skeleton-content {
  width: 100%;
  height: 120rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.skeleton-footer {
  display: flex;
  gap: 12rpx;
}

.skeleton-tag {
  width: 120rpx;
  height: 44rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 10rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 160rpx;
  line-height: 1;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
  display: block;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* ========== 加载更多 ========== */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.loading-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.loading-icon {
  font-size: 32rpx;
  animation: rotate 1.5s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.no-more-text {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e5e7eb;
}

.no-more-label {
  white-space: nowrap;
}

/* ========== 浮动按钮 ========== */
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 56rpx;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: all 0.3s;
}

.fab-button-hover {
  transform: scale(0.9);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.fab-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
  line-height: 1;
}
