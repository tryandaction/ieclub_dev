/* pages/my-activities/index.wxss */

/* ========== 页面容器 ========== */
.my-activities-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff7ed 0%, #f3f4f6 100%);
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* ========== 页面头部 ========== */
.page-header {
  background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
  padding: 32rpx 24rpx 0;
  margin-bottom: 24rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.header-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.title-icon {
  font-size: 48rpx;
  line-height: 1;
}

.title-text {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
}

/* Tab切换 */
.tabs {
  display: flex;
  gap: 40rpx;
}

.tab-item {
  position: relative;
  padding-bottom: 24rpx;
  cursor: pointer;
}

.tab-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 500;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: #ffffff;
  font-weight: 700;
  font-size: 30rpx;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #ffffff;
  border-radius: 3rpx;
}

/* ========== 活动容器 ========== */
.activities-container {
  padding: 0 24rpx;
}

/* ========== 活动卡片 ========== */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.activity-card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 活动封面 */
.activity-cover {
  position: relative;
  width: 100%;
  height: 320rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 120rpx;
  opacity: 0.4;
}

/* 状态标签 */
.status-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.status-badge.status-upcoming {
  background: rgba(59, 130, 246, 0.9);
  color: #ffffff;
}

.status-badge.status-ongoing {
  background: rgba(16, 185, 129, 0.9);
  color: #ffffff;
}

.status-badge.status-ended {
  background: rgba(107, 114, 128, 0.9);
  color: #ffffff;
}

/* 活动信息 */
.activity-info {
  padding: 24rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 元数据 */
.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
  line-height: 1;
}

.meta-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 底部信息 */
.activity-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.category-badge {
  padding: 6rpx 16rpx;
  background: rgba(245, 158, 11, 0.1);
  color: #f59e0b;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.participant-count {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.count-icon {
  font-size: 24rpx;
  line-height: 1;
}

.count-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 600;
}

/* 参与状态 */
.participation-status {
  margin-top: 12rpx;
  display: flex;
  gap: 12rpx;
}

.status-tag {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-tag.checked-in {
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.status-tag.pending {
  background: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
}

.tag-icon {
  font-size: 20rpx;
  line-height: 1;
}

.tag-text {
  line-height: 1;
}

/* ========== 骨架屏 ========== */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.skeleton-item {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.skeleton-cover {
  width: 100%;
  height: 320rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skeleton-title {
  width: 70%;
  height: 40rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

.skeleton-text {
  width: 100%;
  height: 32rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 160rpx;
  line-height: 1;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
  display: block;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.3);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* ========== 加载更多 ========== */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.loading-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.loading-icon {
  font-size: 32rpx;
  animation: rotate 1.5s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.no-more-text {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e5e7eb;
}

.no-more-label {
  white-space: nowrap;
}
