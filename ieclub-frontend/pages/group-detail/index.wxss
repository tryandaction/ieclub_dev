.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 封面 */
.cover {
  height: 300rpx;
  position: relative;
}

.cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 信息卡片 */
.info-card {
  margin: -60rpx 30rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  position: relative;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.info-header {
  display: flex;
  gap: 24rpx;
  align-items: flex-start;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  flex-shrink: 0;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.avatar-icon {
  font-size: 56rpx;
}

.info-content {
  flex: 1;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.tags {
  display: flex;
  gap: 12rpx;
  margin-top: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.tag.category {
  background: #eef2ff;
  color: #667eea;
}

.tag.private {
  background: #f3f4f6;
  color: #6b7280;
}

/* 统计 */
.stats {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn.full {
  flex: none;
  width: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-outline {
  border: 2rpx solid #ddd;
  color: #666;
}

.btn-pending {
  background: #fef3c7;
  color: #d97706;
}

/* 简介 */
.description {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 创建者 */
.creator {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.creator-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

/* Tab切换 */
.tab-bar {
  display: flex;
  background: #fff;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #667eea;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

/* 内容区 */
.content {
  padding: 20rpx 30rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 话题列表 */
.topic-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.topic-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.author-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.author-info {
  flex: 1;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.topic-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.pin-tag {
  padding: 4rpx 12rpx;
  background: #fef2f2;
  color: #ef4444;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.topic-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-top: 16rpx;
}

.topic-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-top: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.topic-images {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.topic-images image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.more-images {
  width: 140rpx;
  height: 140rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.topic-stats {
  display: flex;
  gap: 32rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 成员列表 */
.member-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.member-card {
  text-align: center;
  padding: 24rpx 12rpx;
  background: #fff;
  border-radius: 16rpx;
}

.member-avatar-wrap {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.role-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  font-size: 20rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #fff;
}

.role-badge.owner {
  background: #f59e0b;
}

.role-badge.admin {
  background: #3b82f6;
}

.member-name {
  font-size: 26rpx;
  color: #333;
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.member-level {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
