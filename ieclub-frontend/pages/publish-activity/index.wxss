/* pages/publish-activity/index.wxss */

.publish-activity-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.header-icon {
  font-size: 80rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
}

.header-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单 */
.form {
  padding: 24rpx;
}

.form-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.form-item {
  margin-bottom: 16rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

.required {
  color: #ef4444;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  display: block;
  margin-top: 8rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 分类选择 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
}

.category-item.active {
  background: #eff6ff;
  border-color: #3b82f6;
}

.category-icon {
  font-size: 40rpx;
}

.category-label {
  font-size: 24rpx;
  color: #666;
}

.category-item.active .category-label {
  color: #3b82f6;
  font-weight: 500;
}

/* 时间选择 */
.time-row {
  margin-bottom: 20rpx;
}

.time-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.time-label {
  font-size: 26rpx;
  color: #666;
  width: 140rpx;
}

.picker-value {
  flex: 1;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

/* 标签输入 */
.tag-input-group {
  display: flex;
  gap: 16rpx;
}

.tag-input {
  flex: 1;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.tag-add-btn {
  padding: 20rpx 32rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
  line-height: 1.4;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #eff6ff;
  color: #3b82f6;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.tag-remove {
  font-size: 28rpx;
  color: #93c5fd;
}

/* 提交按钮 */
.submit-section {
  padding: 20rpx 0;
}

.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.submit-btn.disabled {
  opacity: 0.6;
}
