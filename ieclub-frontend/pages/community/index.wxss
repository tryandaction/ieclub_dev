/* pages/community/index.wxss */

/* ========== 基础布局 ========== */
.community-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f9fafb 0%, #f3f4f6 100%);
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* ========== 顶部标题卡片 ========== */
.header-card {
  margin: 24rpx 24rpx 20rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.header-icon {
  font-size: 80rpx;
  line-height: 1;
}

/* ========== 滚动区域 ========== */
.content-scroll {
  height: calc(100vh - 240rpx);
}

/* ========== 骨架屏 ========== */
.skeleton-container {
  padding: 0 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.skeleton-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.skeleton-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #e5e7eb;
}

.skeleton-name {
  height: 32rpx;
  width: 120rpx;
  background: #e5e7eb;
  border-radius: 8rpx;
}

.skeleton-major {
  height: 24rpx;
  width: 160rpx;
  background: #e5e7eb;
  border-radius: 8rpx;
}

.skeleton-stats {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.skeleton-stat {
  flex: 1;
  height: 40rpx;
  background: #e5e7eb;
  border-radius: 12rpx;
}

.skeleton-btn {
  width: 100%;
  height: 60rpx;
  background: #e5e7eb;
  border-radius: 16rpx;
}

.skeleton-shimmer {
  animation: shimmer 1.5s infinite;
  background: linear-gradient(90deg, #e5e7eb 0%, #f3f4f6 50%, #e5e7eb 100%);
  background-size: 200% 100%;
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ========== 用户网格 ========== */
.user-grid {
  padding: 0 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

/* ========== 用户卡片 ========== */
.user-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.user-card-hover {
  transform: scale(0.97);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 头像区域 */
.avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.15);
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar {
  font-size: 64rpx;
  line-height: 1;
}

.online-dot {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 20rpx;
  height: 20rpx;
  background: #10b981;
  border: 3rpx solid #ffffff;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  width: 100%;
}

.name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  text-align: center;
  line-height: 1.3;
}

.major {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.4;
}

/* 统计信息 */
.user-stats {
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: 100%;
  justify-content: center;
}

.stat-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 16rpx;
  border-radius: 14rpx;
}

.level-badge {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
}

.score-badge {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
}

.badge-icon {
  font-size: 20rpx;
  line-height: 1;
}

.badge-text {
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1;
}

.level-badge .badge-text {
  color: #7c3aed;
}

.score-badge .badge-text {
  color: #d97706;
}

/* 标签 */
.user-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  width: 100%;
  justify-content: center;
}

.tag-item {
  padding: 8rpx 16rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1;
}

/* 关注按钮 */
.follow-btn {
  width: 100%;
  padding: 20rpx 0;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1;
}

.follow-btn.following {
  background: #f3f4f6;
  color: #6b7280;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.follow-btn-hover {
  transform: scale(0.95);
}

.btn-text {
  line-height: 1;
}

/* ========== 加载状态 ========== */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-more-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.no-more {
  padding: 40rpx;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #d1d5db;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  gap: 24rpx;
}

.empty-emoji {
  font-size: 120rpx;
  line-height: 1;
  opacity: 0.8;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
}
