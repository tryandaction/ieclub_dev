/* pages/auth/index.wxss */
/* 专业高端登录注册页面 - 2025年11月3日重制 */

/* ==================== 页面容器 ==================== */
.auth-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 40rpx 80rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* ==================== Logo 区域 ==================== */
.logo-section {
  text-align: center;
  padding: 60rpx 0;
  animation: fadeInDown 0.8s ease-out;
}

.logo-container {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto 36rpx;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f3f4f6 100%);
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  font-weight: bold;
  color: #667eea;
  box-shadow: 
    0 20rpx 50rpx rgba(0, 0, 0, 0.3),
    0 10rpx 20rpx rgba(0, 0, 0, 0.2),
    inset 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 2;
  animation: float 3s ease-in-out infinite;
}

.logo-shine {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 35rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, transparent 50%);
  z-index: 3;
  pointer-events: none;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-10rpx) scale(1.02);
  }
}

.app-name {
  font-size: 52rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.app-slogan {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  opacity: 0.9;
  letter-spacing: 4rpx;
}

/* ==================== Tab 切换 ==================== */
.tab-section {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  padding: 10rpx;
  margin-bottom: 50rpx;
  position: relative;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  animation: fadeIn 0.6s ease-out 0.2s both;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  position: relative;
  z-index: 2;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item.active .tab-text {
  color: #667eea;
  font-weight: bold;
  transform: scale(1.05);
}

.tab-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: inline-block;
}

.tab-badge {
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #667eea;
  border-radius: 3rpx;
  animation: badgeGrow 0.3s ease-out;
}

@keyframes badgeGrow {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 40rpx;
    opacity: 1;
  }
}

.tab-indicator {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: calc(50% - 10rpx);
  height: calc(100% - 20rpx);
  background: white;
  border-radius: 18rpx;
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* ==================== 表单容器 ==================== */
.form-container {
  animation: fadeIn 0.5s ease-out;
}

.form-section {
  animation: slideUp 0.5s ease-out;
}

/* ==================== 表单项 ==================== */
.form-item {
  margin-bottom: 36rpx;
  animation: fadeIn 0.4s ease-out;
}

.form-item.error .input-wrapper {
  border-color: #ef4444;
  box-shadow: 0 0 0 3rpx rgba(239, 68, 68, 0.1);
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* ==================== 输入框 ==================== */
.input-wrapper {
  position: relative;
  background: white;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 3rpx solid transparent;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 
    0 10rpx 30rpx rgba(0, 0, 0, 0.15),
    0 0 0 5rpx rgba(102, 126, 234, 0.1);
  transform: translateY(-2rpx);
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #1f2937;
  line-height: 1.5;
}

.input-placeholder {
  color: #9ca3af;
  font-size: 28rpx;
}

.password-input {
  padding-right: 80rpx;
}

.eye-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  padding: 20rpx;
  cursor: pointer;
  transition: all 0.2s;
  z-index: 10;
}

.eye-icon:active {
  transform: translateY(-50%) scale(0.9);
  opacity: 0.6;
}

/* ==================== 验证码相关 ==================== */
.code-wrapper {
  padding-right: 16rpx;
}

.code-input {
  flex: 1;
  padding-right: 20rpx;
}

.code-btn {
  padding: 16rpx 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 14rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  white-space: nowrap;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.code-btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.code-btn.disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

/* ==================== 错误提示 ==================== */
.error-message {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  padding-left: 8rpx;
  animation: shake 0.4s ease-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.error-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.error-text {
  font-size: 24rpx;
  color: #fee2e2;
  font-weight: 500;
}

/* ==================== 忘记密码 ==================== */
.forgot-password {
  text-align: right;
  margin-bottom: 30rpx;
  padding-right: 8rpx;
}

.forgot-link {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  text-decoration: underline;
  transition: opacity 0.3s;
}

.forgot-link:active {
  opacity: 0.7;
}

/* ==================== 按钮 ==================== */
.submit-btn {
  width: 100%;
  padding: 32rpx 0;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 24rpx;
}

.primary-btn {
  background: linear-gradient(135deg, #ffffff 0%, #f3f4f6 100%);
  color: #667eea;
}

.secondary-btn {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.btn-hover {
  opacity: 0.9;
  transform: translateY(-3rpx);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.25);
}

.submit-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.btn-text {
  position: relative;
  z-index: 2;
}

.btn-icon {
  font-size: 38rpx;
  margin-right: 12rpx;
}

.btn-loading {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ==================== 分割线 ==================== */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.25);
}

.divider-text {
  margin: 0 24rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
}

/* ==================== 用户协议 ==================== */
.agreement {
  text-align: center;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.6;
}

.agreement-text {
  color: rgba(255, 255, 255, 0.85);
}

.agreement-link {
  color: white;
  text-decoration: underline;
  margin: 0 4rpx;
  font-weight: 600;
}

.agreement-link:active {
  opacity: 0.7;
}

/* ==================== 底部装饰 ==================== */
.decoration-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.08;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  background: white;
  bottom: -100rpx;
  left: -80rpx;
  animation: pulse 5s ease-in-out infinite;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  background: white;
  bottom: 120rpx;
  right: 60rpx;
  animation: pulse 6s ease-in-out infinite 1s;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  background: white;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  animation: pulse 4s ease-in-out infinite 2s;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.08;
  }
  50% {
    transform: scale(1.15);
    opacity: 0.15;
  }
}

/* ==================== 动画效果 ==================== */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animated-fade-in {
  animation: fadeIn 0.5s ease-out;
}

/* ==================== 响应式适配 ==================== */
@media (max-width: 375px) {
  .logo {
    width: 120rpx;
    height: 120rpx;
    font-size: 56rpx;
  }
  
  .app-name {
    font-size: 48rpx;
  }
  
  .form-input {
    font-size: 28rpx;
  }
}
