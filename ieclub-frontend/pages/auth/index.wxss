/* pages/auth/index.wxss */
.auth-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 40rpx 60rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* Logo 区域 */
.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
  animation: fadeInDown 0.8s ease;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: white;
  border-radius: 30rpx;
  margin: 0 auto 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* Tab 切换 */
.tab-section {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
  position: relative;
  backdrop-filter: blur(10rpx);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #667eea;
  font-weight: bold;
}

.tab-text {
  font-size: 32rpx;
  color: white;
  transition: all 0.3s ease;
}

.tab-indicator {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: calc(50% - 8rpx);
  height: calc(100% - 16rpx);
  background: white;
  border-radius: 16rpx;
  transition: transform 0.3s ease;
  z-index: 1;
}

/* 表单区域 */
.form-section {
  animation: fadeIn 0.5s ease;
}

.form-item {
  margin-bottom: 30rpx;
}

.input-wrapper {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.code-input {
  flex: 1;
}

.code-btn {
  padding: 10rpx 20rpx;
  background: #667eea;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  border: none;
  margin-left: 20rpx;
}

.code-btn.disabled {
  background: #ccc;
}

.eye-icon {
  font-size: 36rpx;
  margin-left: 20rpx;
  cursor: pointer;
}

/* 忘记密码 */
.forgot-password {
  text-align: right;
  margin-bottom: 30rpx;
}

.forgot-link {
  font-size: 26rpx;
  color: white;
  text-decoration: underline;
}

/* 按钮 */
.submit-btn {
  width: 100%;
  background: white;
  color: #667eea;
  border-radius: 20rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.submit-btn.loading {
  background: #ccc;
  color: #999;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider-text {
  margin: 0 20rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 微信登录按钮 */
.wechat-btn {
  width: 100%;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 20rpx;
  padding: 28rpx 0;
  font-size: 30rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

/* 用户协议 */
.agreement {
  text-align: center;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.agreement-link {
  color: white;
  text-decoration: underline;
  margin: 0 5rpx;
}

/* 动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

