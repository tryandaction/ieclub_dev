/* pages/auth/index.wxss */
.auth-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f3ff 0%, #fce7f3 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 - 统一IE风格 */
.auth-page::before {
  content: '';
  position: fixed;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
  animation: pulse 4s ease-in-out infinite;
}

.auth-page::after {
  content: '';
  position: fixed;
  bottom: -30%;
  left: -10%;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(236, 72, 153, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
  animation: pulse 5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.15;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.25;
  }
}

/* 导航栏 */
.nav-bar {
  padding: 20rpx 32rpx;
  position: relative;
  z-index: 10;
}

.nav-back {
  display: inline-flex;
  align-items: center;
  color: #374151;
  font-size: 28rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s;
}

.nav-back:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.95);
}

.back-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.back-text {
  font-weight: 500;
}

/* 内容区 */
.content {
  padding: 40rpx 32rpx;
  position: relative;
  z-index: 10;
}

/* 标题 */
.header {
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #ec4899 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

/* 表单 */
.form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 48rpx 36rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  backdrop-filter: blur(10px);
}

.form-item {
  margin-bottom: 36rpx;
}

.label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #374151;
  font-weight: 600;
}

.icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.input {
  width: 100%;
  height: 96rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  padding: 0 28rpx;
  font-size: 28rpx;
  color: #111827;
  transition: all 0.3s;
}

.input:focus {
  background: #ffffff;
  border-color: #8b5cf6;
  box-shadow: 0 0 0 4rpx rgba(139, 92, 246, 0.1);
}

.input::placeholder {
  color: #9ca3af;
}

/* 错误状态 */
.input.error {
  border-color: #ef4444;
}

.error-tip {
  font-size: 24rpx;
  color: #ef4444;
  margin-top: 8rpx;
  display: flex;
  align-items: center;
}

.error-tip::before {
  content: '⚠️';
  margin-right: 6rpx;
}

/* 密码提示 */
.password-tip {
  margin-top: 8rpx;
  padding: 12rpx 16rpx;
  background: rgba(139, 92, 246, 0.05);
  border-radius: 12rpx;
  border-left: 3rpx solid #8b5cf6;
}

.password-tip .tip-text {
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 验证码输入 */
.code-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.code-input {
  flex: 1;
}

.code-btn {
  height: 96rpx;
  padding: 0 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  white-space: nowrap;
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.code-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.code-btn.disabled {
  background: #e5e7eb;
  color: #9ca3af;
  box-shadow: none;
}

/* 切换行 */
.switch-line {
  margin-bottom: 36rpx;
  text-align: right;
}

.link {
  font-size: 26rpx;
  color: #8b5cf6;
  font-weight: 600;
  position: relative;
  padding-bottom: 4rpx;
}

.link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: #8b5cf6;
  transform: scaleX(0);
  transition: transform 0.3s;
}

.link:active::after {
  transform: scaleX(1);
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
  margin-bottom: 28rpx;
  position: relative;
  overflow: hidden;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.submit-btn:active::before {
  width: 600rpx;
  height: 600rpx;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.submit-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 底部 */
.footer {
  text-align: center;
  font-size: 26rpx;
  padding-top: 16rpx;
}

.footer-text {
  color: #6b7280;
}

.footer-link {
  color: #8b5cf6;
  font-weight: 700;
  margin-left: 8rpx;
}
