/* pages/notifications/index.wxss */
.notifications-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e7eb;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
}

.tab-item {
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #6b7280;
  background: #f3f4f6;
}

.tab-item.active {
  background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
  color: #fff;
  font-weight: 600;
}

.mark-all-btn {
  font-size: 26rpx;
  color: #8b5cf6;
}

/* 通知列表 */
.notification-list {
  padding: 16rpx;
}

.notification-item {
  display: flex;
  align-items: flex-start;
  padding: 28rpx 24rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.notification-item.read {
  opacity: 0.7;
}

.unread-dot {
  position: absolute;
  top: 32rpx;
  left: 16rpx;
  width: 12rpx;
  height: 12rpx;
  background: #ef4444;
  border-radius: 50%;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.icon {
  font-size: 36rpx;
}

.content-wrapper {
  flex: 1;
  min-width: 0;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.content {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.time {
  font-size: 24rpx;
  color: #9ca3af;
}

.arrow {
  color: #9ca3af;
  font-size: 36rpx;
  margin-left: 16rpx;
  align-self: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #9ca3af;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  color: #9ca3af;
  font-size: 26rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #e5e7eb;
  border-top-color: #8b5cf6;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 加载更多 */
.load-more,
.no-more {
  text-align: center;
  padding: 32rpx;
  color: #9ca3af;
  font-size: 26rpx;
}
