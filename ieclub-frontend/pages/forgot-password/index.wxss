/* pages/forgot-password/index.wxss */

/* ========== 页面容器 ========== */
.forgot-password-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  padding-bottom: 200rpx;
  box-sizing: border-box;
}

/* ========== 步骤指示器 ========== */
.steps-indicator {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 60rpx;
  padding: 0 20rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex: 0 0 auto;
}

.step-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.step-item.active .step-circle {
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.step-number {
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.8);
}

.step-item.active .step-number {
  color: #667eea;
}

.step-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.step-item.active .step-label {
  color: #ffffff;
  font-weight: 700;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 16rpx;
  transition: all 0.3s;
}

.step-line.active {
  background: #ffffff;
}

/* ========== 内容区域 ========== */
.content-area {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.2);
  min-height: 500rpx;
}

.step-content {
  animation: fadeIn 0.5s ease-out;
}

.step-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 60rpx;
  text-align: center;
}

.step-icon {
  font-size: 100rpx;
  line-height: 1;
}

.step-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.3;
}

.step-desc {
  font-size: 26rpx;
  color: #9ca3af;
  line-height: 1.6;
  max-width: 500rpx;
}

/* ========== 表单区域 ========== */
.form-section {
  display: flex;
  flex-direction: column;
  gap: 36rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-item.error .input-wrapper {
  border-color: #ef4444;
  box-shadow: 0 0 0 3rpx rgba(239, 68, 68, 0.1);
}

.form-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding-left: 8rpx;
}

.label-icon {
  font-size: 32rpx;
  line-height: 1;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

/* ========== 输入框 ========== */
.input-wrapper {
  position: relative;
  background: #f9fafb;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 5rpx rgba(102, 126, 234, 0.1);
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #1f2937;
  line-height: 1.5;
}

.input-placeholder {
  color: #9ca3af;
  font-size: 28rpx;
}

.password-input {
  padding-right: 80rpx;
}

.eye-icon {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  padding: 24rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye-icon:active {
  transform: translateY(-50%) scale(0.9);
  opacity: 0.7;
}

/* ========== 验证码输入框 ========== */
.code-wrapper {
  padding-right: 16rpx;
}

.code-input {
  flex: 1;
  padding-right: 20rpx;
}

.code-btn {
  padding: 16rpx 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 14rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  white-space: nowrap;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.code-btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.code-btn.disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

/* ========== 错误提示 ========== */
.error-message {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding-left: 8rpx;
  animation: shake 0.4s ease-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.error-icon {
  font-size: 28rpx;
  line-height: 1;
}

.error-text {
  font-size: 24rpx;
  color: #ef4444;
  font-weight: 500;
}

/* ========== 提交按钮 ========== */
.submit-btn {
  width: 100%;
  padding: 32rpx 0;
  font-size: 34rpx;
  font-weight: 700;
  border-radius: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  margin-top: 20rpx;
}

.primary-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.btn-hover {
  opacity: 0.9;
  transform: translateY(-3rpx);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.2);
}

.submit-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.btn-text {
  line-height: 1;
}

/* ========== 底部操作 ========== */
.footer-actions {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 48rpx;
  background: rgba(255, 255, 255, 0.15);
  color: #ffffff;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20rpx);
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.back-btn-hover {
  background: rgba(255, 255, 255, 0.25);
}

.back-icon {
  font-size: 36rpx;
  line-height: 1;
}

.back-text {
  line-height: 1;
}

/* ========== 动画 ========== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animated-fade-in {
  animation: fadeIn 0.5s ease-out;
}
