/* pages/user-profile/index.wxss */

.user-profile-page {
  min-height: 100vh;
  background: #f3f4f6;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  gap: 16rpx;
}

.loading-icon {
  font-size: 64rpx;
  animation: rotate 1.5s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 封面区 */
.cover-section {
  position: relative;
  height: 360rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

.edit-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #8b5cf6;
}

.edit-icon {
  font-size: 28rpx;
}

/* 用户信息卡片 */
.info-card {
  margin: -120rpx 24rpx 24rpx;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.avatar-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}

.user-info {
  text-align: center;
  margin-bottom: 24rpx;
}

.name-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.cert-badge {
  padding: 4rpx 12rpx;
  background: #dbeafe;
  color: #2563eb;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.level-badge {
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.motto {
  display: block;
  font-size: 26rpx;
  font-style: italic;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.bio {
  display: block;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.school-info {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.info-item {
  display: flex;
  align-items: center;
}

/* 统计数据 */
.stats-row {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 1rpx solid #f3f4f6;
  border-bottom: 1rpx solid #f3f4f6;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #8b5cf6;
}

.stat-label {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 操作按钮 */
.action-btns {
  display: flex;
  gap: 16rpx;
}

.follow-btn {
  flex: 1;
  padding: 24rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 700;
  border: none;
}

.follow-btn.following {
  background: #ffffff;
  color: #8b5cf6;
  border: 2rpx solid #8b5cf6;
}

.message-btn {
  flex: 1;
  padding: 24rpx;
  background: #ffffff;
  color: #374151;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.btn-icon {
  font-size: 28rpx;
}

/* 社交链接 */
.social-section,
.tags-section,
.tabs-section {
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.social-links {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.social-item {
  flex: 1;
  min-width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #374151;
  border: 1rpx solid #e5e7eb;
}

.social-icon {
  font-size: 28rpx;
}

/* 标签 */
.tag-group {
  margin-bottom: 24rpx;
}

.tag-group:last-child {
  margin-bottom: 0;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.skill-tag {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
}

.interest-tag {
  background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
  color: #ffffff;
}

/* Tab */
.tab-header {
  display: flex;
  border-bottom: 2rpx solid #f3f4f6;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #9ca3af;
  transition: all 0.3s;
  position: relative;
}

.tab-item.active {
  color: #8b5cf6;
  font-weight: 700;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  border-radius: 2rpx 2rpx 0 0;
}

.tab-count {
  font-size: 22rpx;
}

/* Tab内容 */
.tab-content {
  min-height: 400rpx;
}

/* 发布列表 */
.posts-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.post-item {
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  border: 1rpx solid #e5e7eb;
}

.post-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #9ca3af;
}

/* 关于我 */
.introduction {
  line-height: 1.8;
}

.intro-text {
  font-size: 28rpx;
  color: #374151;
  white-space: pre-wrap;
}

/* 成就 */
.badges-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 16rpx;
  text-align: center;
}

.badge-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.badge-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #78350f;
  margin-bottom: 4rpx;
}

.badge-date {
  font-size: 20rpx;
  color: #92400e;
}

.achievements-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.achievement-item {
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  border: 1rpx solid #e5e7eb;
}

.achievement-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.achievement-desc {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 26rpx;
  color: #9ca3af;
}
