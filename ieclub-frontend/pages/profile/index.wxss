/* pages/profile/index.wxss */

/* ========== 基础布局 ========== */
.profile-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f9fafb 0%, #f3f4f6 100%);
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* ========== 未登录状态 ========== */
.guest-view {
  padding: 120rpx 40rpx;
}

.guest-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 80rpx 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  text-align: center;
}

.guest-avatar {
  font-size: 120rpx;
  line-height: 1;
}

.guest-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}

.guest-desc {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
}

.login-btn {
  width: 100%;
  padding: 28rpx 0;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  margin-top: 20rpx;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

/* ========== 已登录状态 ========== */
.logged-in-view {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* ========== 用户信息卡片 ========== */
.user-card {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 92, 246, 0.3);
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  position: relative;
}

.edit-profile-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
}

.edit-icon {
  font-size: 28rpx;
}

.avatar-wrapper {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f3f4f6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  flex-shrink: 0;
}

.avatar {
  font-size: 80rpx;
  line-height: 1;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  font-size: 80rpx;
  line-height: 1;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-email {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-detail {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.user-badges {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
}

.level-badge {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
}

.score-badge {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
}

.badge-icon {
  font-size: 24rpx;
  line-height: 1;
}

.badge-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
}

/* ========== 统计数据卡片 ========== */
.stats-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.stat-item:active {
  opacity: 0.7;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e5e7eb;
}

/* ========== 功能菜单 ========== */
.menu-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.menu-group {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-hover {
  background: #f9fafb;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  font-size: 40rpx;
  line-height: 1;
}

.menu-label {
  font-size: 30rpx;
  color: #1f2937;
  font-weight: 500;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

.menu-badge {
  font-size: 24rpx;
  color: #8b5cf6;
  background: #f3e8ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.menu-arrow {
  font-size: 40rpx;
  color: #d1d5db;
  line-height: 1;
}

/* ========== 退出登录按钮 ========== */
.logout-section {
  padding: 20rpx 0 40rpx;
}

.logout-btn {
  width: 100%;
  padding: 28rpx 0;
  background: #ffffff;
  color: #ef4444;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
}

.logout-btn-hover {
  background: #fef2f2;
}

.logout-text {
  line-height: 1;
}

/* 未读通知徽章 */
.unread-badge {
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 12rpx;
  background: #ef4444;
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

.notification-item .menu-right {
  display: flex;
  align-items: center;
}
