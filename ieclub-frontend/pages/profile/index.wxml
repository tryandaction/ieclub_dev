<!--pages/profile/index.wxml-->
<view class="profile-page">
  <view class="user-header">
    <text class="avatar">{{user.avatar}}</text>
    <text class="name">{{user.name}}</text>
    <text class="school">{{user.major}} · {{user.grade}}</text>
    <view class="badges">
      <view class="badge">LV{{user.level}}</view>
      <view class="badge">⭐ {{user.score}}</view>
    </view>
  </view>

  <view class="stats">
    <view class="stat-item">
      <text class="stat-value">{{user.stats.topics}}</text>
      <text class="stat-label">话题</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{user.stats.followers}}</text>
      <text class="stat-label">粉丝</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{user.stats.following}}</text>
      <text class="stat-label">关注</text>
    </view>
  </view>

  <view class="menu">
    <view class="menu-item" bindtap="onMenuTap" data-label="我的话题">
      <text class="menu-icon">📝</text>
      <text class="menu-label">我的话题</text>
      <text class="menu-arrow">›</text>
    </view>
    <view class="menu-item" bindtap="onMenuTap" data-label="收藏">
      <text class="menu-icon">⭐</text>
      <text class="menu-label">收藏</text>
      <text class="menu-arrow">›</text>
    </view>
    <view class="menu-item" bindtap="onMenuTap" data-label="设置">
      <text class="menu-icon">⚙️</text>
      <text class="menu-label">设置</text>
      <text class="menu-arrow">›</text>
    </view>
  </view>
</view>

