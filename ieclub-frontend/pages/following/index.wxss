/* pages/following/index.wxss */

/* ========== 页面容器 ========== */
.following-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #f3f4f6 100%);
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* ========== 页面头部 ========== */
.page-header {
  background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
  padding: 32rpx 24rpx 40rpx;
  margin-bottom: 24rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.header-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.title-icon {
  font-size: 48rpx;
  line-height: 1;
}

.title-text {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
}

.header-stats {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ========== 用户容器 ========== */
.users-container {
  padding: 0 24rpx;
}

/* ========== 用户卡片 ========== */
.user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 用户头像 */
.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
  flex-shrink: 0;
}

.user-avatar-placeholder {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  flex-shrink: 0;
}

/* 用户信息 */
.user-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.verified-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
  color: #ffffff;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: 700;
}

.user-bio {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 取消关注按钮 */
.unfollow-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 24rpx;
  background: rgba(6, 182, 212, 0.1);
  border: 2rpx solid #06b6d4;
  border-radius: 20rpx;
  flex-shrink: 0;
  transition: all 0.3s;
}

.unfollow-btn:active {
  transform: scale(0.95);
  background: rgba(6, 182, 212, 0.2);
}

.unfollow-icon {
  font-size: 24rpx;
  color: #06b6d4;
  font-weight: 700;
  line-height: 1;
}

.unfollow-text {
  font-size: 24rpx;
  color: #06b6d4;
  font-weight: 600;
}

/* ========== 骨架屏 ========== */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.skeleton-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.skeleton-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  flex-shrink: 0;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skeleton-name {
  width: 160rpx;
  height: 36rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

.skeleton-bio {
  width: 100%;
  height: 32rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

.skeleton-button {
  width: 120rpx;
  height: 60rpx;
  background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 20rpx;
  flex-shrink: 0;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 160rpx;
  line-height: 1;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
  display: block;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(6, 182, 212, 0.3);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* ========== 加载更多 ========== */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.loading-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.loading-icon {
  font-size: 32rpx;
  animation: rotate 1.5s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.no-more-text {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e5e7eb;
}

.no-more-label {
  white-space: nowrap;
}
