/* pages/settings/delete-account/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

/* ========== Warning Header ========== */
.warning-header {
  text-align: center;
  margin-bottom: 40rpx;
  animation: shake 0.8s ease-in-out;
}

.warning-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: pulse 2s infinite;
}

.warning-title {
  font-size: 52rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.warning-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ========== 注销须知 ========== */
.notice-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.6s ease-out;
}

.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.notice-list {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 2.2;
}

.notice-item {
  margin-bottom: 8rpx;
}

/* ========== 表单容器 ========== */
.form-container {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.8s ease-out;
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
}

/* ========== 原因选择 ========== */
.reason-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reason-option {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  transition: all 0.3s;
  position: relative;
}

.reason-option.selected {
  background: #fef2f2;
  border-color: #ef4444;
}

.option-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.option-label {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
}

.check-icon {
  font-size: 32rpx;
  color: #ef4444;
  font-weight: bold;
}

/* ========== 详细说明 ========== */
.reason-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #374151;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

/* ========== 密码输入 ========== */
.password-input-wrapper {
  display: flex;
  align-items: center;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 0 24rpx;
}

.password-input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  color: #1f2937;
}

.password-toggle {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toggle-icon {
  font-size: 32rpx;
}

/* ========== 确认勾选 ========== */
.confirm-section {
  margin-bottom: 40rpx;
  padding: 24rpx;
  background: #fef2f2;
  border-radius: 16rpx;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #ef4444;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s;
}

.checkbox.checked {
  background: #ef4444;
}

.checkbox .check-icon {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.checkbox-label {
  font-size: 26rpx;
  color: #991b1b;
  line-height: 1.6;
}

/* ========== 按钮 ========== */
.delete-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(239, 68, 68, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  margin-bottom: 20rpx;
}

.delete-btn:not(.loading):active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.delete-btn.loading {
  opacity: 0.7;
}

.loading-icon {
  margin-right: 12rpx;
  animation: spin 1s linear infinite;
}

.cancel-btn {
  width: 100%;
  height: 100rpx;
  background: white;
  color: #6b7280;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 50rpx;
  border: 2rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.btn-hover {
  opacity: 0.9;
}

.cancel-hover {
  background: #f9fafb;
}

/* ========== 动画 ========== */
@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-10rpx);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(10rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

