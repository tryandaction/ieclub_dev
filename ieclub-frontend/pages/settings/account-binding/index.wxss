.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 绑定状态卡片 */
.status-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.status-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.status-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.status-icon.email {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.status-icon.phone {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.status-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  color: #999;
}

.status-badge.success {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: white;
}

/* 绑定表单卡片 */
.bind-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.bind-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: 2px solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  background: white;
  border-color: #667eea;
}

.code-wrapper {
  display: flex;
  gap: 16rpx;
}

.code-input {
  flex: 1;
}

.code-btn {
  padding: 0 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 26rpx;
  white-space: nowrap;
}

.code-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

.bind-btn {
  width: 100%;
  margin-top: 20rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.bind-btn.loading {
  background: #e0e0e0;
  color: #999;
}

/* 已绑定提示 */
.bound-tip {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}

.tip-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 24rpx;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: white;
}

.tip-text {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
}
