// 权限表
model Permission {
  id String @id @default(cuid())

  // 权限信息
  name        String  @unique @db.VarChar(100) // 权限名称，如 user.create, topic.delete
  displayName String  @db.VarChar(100) // 显示名称
  description String? @db.Text

