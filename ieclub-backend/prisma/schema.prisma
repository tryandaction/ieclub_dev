// ==================== RBAC 权限管理系统 ====================

// 角色表
model Role {
  id String @id @default(cuid())

  // 角色信息
  name        String  @unique @db.VarChar(50) // 角色名称，如 admin, moderator, vip_user
  displayName String  @db.VarChar(100) // 显示名称，如 "系统管理员"
  description String? @db.Text

